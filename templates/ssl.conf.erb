ssl_session_cache shared:SSL:50m;
ssl_session_timeout 5m;
<% if @ie6_compat -%>
# SSLv2 is insecure, we still allow SSLv3
ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
<% else -%>
ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
<% end -%>
<% if @pfs -%>
# PFS-enabled chiphers; we prefer ECDHE and AES128 with Galois/Compact Mode
ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384::kEDH+AESGCM:ECDHE-RSA-AES128-SHA256:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA:ECDHE-ECDSA-AES128-SHA:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:ECDHE-ECDSA-AES256-SHA:AES128-GCM-SHA256:AES256-GCM-SHA384:ECDHE-RSA-RC4-SHA:ECDHE-ECDSA-RC4-SHA:AES128:AES256:RC4-SHA:HIGH:!aNULL:!eNULL:!EXPORT:!DES:!3DES:!MD5:!PSK:!DH;
<% else -%>
# Non PFS-enabled ssl chiphers. This will allow post-hoc dechiphering of SSL sessions.
ssl_ciphers AES128-GCM-SHA256:RC4-SHA:RC4-MD5:AES128-SHA:AES256-SHA;
<% end -%>
